<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:Knowte.Controls">

    <Style x:Key="{x:Type controls:CountLabel}" TargetType="{x:Type controls:CountLabel}">
        <Setter Property="FontSize" Value="{DynamicResource FontSizeSmall}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:CountLabel}" >
                    <Border 
                        Margin="5,-5,0,0" 
                        Background="{DynamicResource Brush_PrimaryAccent}" 
                        MinWidth="20" 
                        Height="20" 
                        CornerRadius="10" 
                        HorizontalAlignment="Left">
                        <Label 
                            Padding="6,0,6,0" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center" 
                            Content="{TemplateBinding Content}" 
                            Foreground="{DynamicResource Brush_CountLabelForeground}"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>