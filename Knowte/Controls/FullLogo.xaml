<UserControl x:Class="Knowte.Controls.FullLogo"
             x:Name="FullLogoName"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <StackPanel Orientation="Horizontal">
        <Grid>
            <Ellipse Panel.ZIndex="0" Width="70" Height="70" Fill="{Binding IconBackground,ElementName=FullLogoName}"/>
            <Viewbox Panel.ZIndex="1" Width="76" Height="76">
                <Path Data="{StaticResource KnowteIcon}" Fill="{Binding IconForeground,ElementName=FullLogoName}"/>
            </Viewbox>
        </Grid>
        <TextBlock 
            Margin="20,-5,0,0" 
            VerticalAlignment="Center" 
            Text="{Binding ApplicationName, ElementName=FullLogoName}" 
            Foreground="{Binding Foreground, ElementName=FullLogoName}" 
            FontSize="42" 
            FontWeight="Light"
            Visibility="{Binding ShowApplicationName,ElementName=FullLogoName,Converter={StaticResource BooleanToCollapsedConverter}}"/>
    </StackPanel>
</UserControl>
