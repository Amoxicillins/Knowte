<fwc:Windows10BorderlessWindow x:Class="Knowte.Views.Shell"
                               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                               xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                               xmlns:fwc="clr-namespace:Digimezzo.Foundation.WPF.Controls;assembly=Digimezzo.Foundation.WPF"
                               xmlns:prismmvvm="clr-namespace:Prism.Mvvm;assembly=Prism.Wpf"
                               mc:Ignorable="d"
                               Title="Funance" Height="550" Width="850"
                               Background="{DynamicResource Brush_WindowBackground}"
                               OverlayBackground="{DynamicResource Brush_Overlay}"
                               IsOverlayVisible="{Binding Path=IsOverlayVisible}"
                               Loaded="Shell_Loaded"
                               ApplyDefaultButtonColors="False"
                               MinMaxForeground="{DynamicResource Brush_WindowButtonForeground}"
                               MinMaxHoveredForeground="{DynamicResource Brush_WindowButtonForeground}"
                               MinMaxPressedForeground="{DynamicResource Brush_WindowButtonForeground}"
                               MinMaxBackground="{DynamicResource Brush_WindowButtonBackground}"
                               MinMaxHoveredBackground="{DynamicResource Brush_WindowButtonHoveredBackground}"
                               MinMaxPressedBackground="{DynamicResource Brush_WindowButtonPressedBackground}"
                               CloseForeground="{DynamicResource Brush_WindowButtonForeground}"
                               CloseHoveredForeground="{DynamicResource Brush_WindowButtonForeground}"
                               ClosePressedForeground="{DynamicResource Brush_WindowButtonForeground}"
                               CloseBackground="{DynamicResource Brush_WindowButtonBackground}"
                               CloseHoveredBackground="{DynamicResource Brush_WindowButtonHoveredBackground}"
                               ClosePressedBackground="{DynamicResource Brush_WindowButtonPressedBackground}"
                               prismmvvm:ViewModelLocator.AutoWireViewModel="True">

    <Grid>
        <Border x:Name="BusyIndicatorBorder" Panel.ZIndex="2" Background="#00000000" 
                Visibility="{Binding IsBusyIndicatorVisible,Converter={StaticResource BooleanToCollapsedConverter}}">
            <Border Background="{DynamicResource Brush_BusyIndicatorBackground}" Width="60" Height="60" CornerRadius="30">
                <fwc:MaterialCircularProgressBar Width="40" Height="40" VerticalAlignment="Center" StrokeThickness="4"
                                                 Accent="{DynamicResource Brush_PrimaryAccent}" IsIndeterminate="True"/>
                <Border.Effect>
                    <DropShadowEffect x:Name="shadow" BlurRadius="6" ShadowDepth="2" Color="Black" Opacity="0.5"/>
                </Border.Effect>
            </Border>
        </Border>
        <Border x:Name="WindowBorder" Panel.ZIndex="1" BorderBrush="{DynamicResource Brush_WindowBorder}" BorderThickness="1"/>
        <Frame x:Name="ShellFrame" Panel.ZIndex="1" NavigationUIVisibility="Hidden" 
               Navigating="ShellFrame_Navigating" VerticalAlignment="Stretch"/>
    </Grid>
</fwc:Windows10BorderlessWindow>
