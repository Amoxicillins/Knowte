<Page x:Class="Knowte.Views.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:controls="clr-namespace:Knowte.Controls"
      xmlns:fwc="clr-namespace:Digimezzo.Foundation.WPF.Controls;assembly=Digimezzo.Foundation.WPF"
      xmlns:prismmvvm="clr-namespace:Prism.Mvvm;assembly=Prism.Wpf"
      xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Loaded="Page_Loaded"
      Title="Main"
      FontSize="{DynamicResource FontSizeNormal}"
      prismmvvm:ViewModelLocator.AutoWireViewModel="True">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadedCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <fwc:SplitView x:Name="MySplitView" Panel.ZIndex="0" IsPaneOpen="False" OpenPaneLength="304"
                   ButtonHoveredBackground="{DynamicResource Brush_HamburgerButtonHovered}" 
                   ButtonPressedBackground="{DynamicResource Brush_HamburgerButtonPressed}"
                   OverlayBackground="{DynamicResource Brush_Overlay}">
        <i:Interaction.Triggers>
            <i:EventTrigger EventName="PaneClosed">
                <i:InvokeCommandAction Command="{Binding PaneClosedCommand}" />
            </i:EventTrigger>
        </i:Interaction.Triggers>
        <!-- SplitView ButtonContent -->
        <fwc:SplitView.ButtonContent>
            <fwc:MaterialIcon Text="&#xE5D2;" FontSize="24" Foreground="{DynamicResource Brush_HamburgerButtonIcon}"/>
        </fwc:SplitView.ButtonContent>
        <!-- SplitView Pane -->
        <fwc:SplitView.Pane>
            <StackPanel Orientation="Horizontal">
                <DockPanel Background="{DynamicResource Brush_SplitViewBackground}" Width="300">
                    <!-- Header -->
                    <Grid DockPanel.Dock="Top" Height="190">
                        <Border Panel.ZIndex="0" Background="{DynamicResource Brush_SplitViewHeaderBackground}"/>
                        <Viewbox Panel.ZIndex="1" Width="90" Height="90" Margin="0,0,12,12"
                                     HorizontalAlignment="Right" VerticalAlignment="Bottom">
                            <Path Data="{StaticResource KnowtePencil}" Fill="{DynamicResource Brush_SplitViewHeaderPencil}"/>
                        </Viewbox>
                        <StackPanel Panel.ZIndex="2" HorizontalAlignment="Stretch" VerticalAlignment="Bottom">
                            <Viewbox Height="50" Margin="18,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center">
                                <controls:FullLogo Panel.ZIndex="3" Foreground="{DynamicResource Brush_LightText}" 
                                                   IconForeground="{DynamicResource Brush_PrimaryAccent}" IconBackground="{DynamicResource Brush_IconBackground}"/>
                            </Viewbox>
                            <!-- Button -->
                            <ToggleButton x:Name="CollectionButton" Margin="0,12,0,12" Style="{StaticResource TransparentToggleButton}" 
                                              IsChecked="{Binding ShowCollections}">
                                <DockPanel Margin="18,6,18,6">
                                    <Grid DockPanel.Dock="Right" VerticalAlignment="Center">
                                        <fwc:MaterialIcon Text="&#xE5CF;"
                                                       Foreground="{DynamicResource Brush_LightText}" FontSize="18" 
                                                       Visibility="{Binding IsChecked,ElementName=CollectionButton,Converter={StaticResource InvertingBooleanToVisibilityConverter}}"/>
                                        <fwc:MaterialIcon Text="&#xE5CE;"
                                                       Foreground="{DynamicResource Brush_LightText}" FontSize="18" 
                                                       Visibility="{Binding IsChecked,ElementName=CollectionButton,Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    </Grid>
                                    <StackPanel>
                                        <TextBlock Text="{DynamicResource Language_Collection}" Foreground="{DynamicResource Brush_ActiveCollectionText}"/>
                                        <Grid Margin="0,6,0,0">
                                            <TextBlock Text="{Binding ActiveCollection}" Foreground="{DynamicResource Brush_LightText}" 
                                                           Visibility="{Binding ActiveCollection, Converter={StaticResource NullToCollapsedConverter}}"/>
                                            <TextBlock Text="{DynamicResource Language_No_Active_Collection}" Foreground="{DynamicResource Brush_LightText}" 
                                                       Visibility="{Binding ActiveCollection, Converter={StaticResource NullToVisibleConverter}}"/>
                                        </Grid>
                                    </StackPanel>
                                </DockPanel>
                            </ToggleButton>
                        </StackPanel>
                    </Grid>
                    <!-- Content -->
                    <fwc:Pivot SelectedIndex="{Binding ContentIndex,Mode=OneWay}" 
                                  DisableTabKey="True" AnimationType="SlideVertical" HeaderVisibility="Collapsed">
                        <!-- Collections -->
                        <fwc:PivotItem>
                            <Grid>
                                <ListBox Margin="0,18,0,0" Panel.ZIndex="0" Style="{StaticResource ListBoxCollections}"
                                         ItemsSource="{Binding Collections}" SelectedItem="{Binding SelectedCollection}"/>
                                <StackPanel Panel.ZIndex="1" VerticalAlignment="Bottom" HorizontalAlignment="Right">
                                    <StackPanel>
                                        <!--Activate collection button-->
                                        <fwc:MaterialMiniFloatingActionButton Accent="{DynamicResource Brush_FloatingActionButtonOption}"
                                                                              Margin="12,12,12,0" Command="{Binding ActivateCollectionCommand}"
                                                                              ToolTip="{DynamicResource Language_Activate_Collection}"
                                                                              Style="{StaticResource SoftAppear}"
                                                                              Visibility="{Binding CanActivateSelectedCollection, Converter={StaticResource BooleanToCollapsedConverter}}">
                                            <fwc:MaterialIcon Text="&#xE5CA;" FontSize="22"
                                                              Foreground="{DynamicResource Brush_PrimaryAccent}"/>
                                        </fwc:MaterialMiniFloatingActionButton>
                                        <!-- Edit collection button-->
                                        <fwc:MaterialMiniFloatingActionButton Accent="{DynamicResource Brush_FloatingActionButtonOption}"
                                                                              Margin="12,12,12,0" Command="{Binding EditCollectionCommand}"
                                                                              ToolTip="{DynamicResource Language_Edit_Collection}"
                                                                              Style="{StaticResource SoftAppear}"
                                                                              Visibility="{Binding SelectedCollection, Converter={StaticResource NullToCollapsedConverter}}">
                                            <fwc:MaterialIcon Text="&#xE254;" FontSize="22"
                                                              Foreground="{DynamicResource Brush_PrimaryAccent}"/>
                                        </fwc:MaterialMiniFloatingActionButton>
                                        <!-- Delete collection button-->
                                        <fwc:MaterialMiniFloatingActionButton Accent="{DynamicResource Brush_FloatingActionButtonOption}"
                                                                              Margin="12,12,12,0" Command="{Binding DeleteCollectionCommand}"
                                                                              ToolTip="{DynamicResource Language_Delete_Collection}"
                                                                              Style="{StaticResource SoftAppear}"
                                                                              Visibility="{Binding SelectedCollection, Converter={StaticResource NullToCollapsedConverter}}">
                                            <fwc:MaterialIcon Text="&#xE872;" FontSize="22"
                                                              Foreground="{DynamicResource Brush_PrimaryAccent}"/>
                                        </fwc:MaterialMiniFloatingActionButton>
                                    </StackPanel>
                                    <!-- Add collection button -->
                                    <fwc:MaterialFloatingActionButton Accent="{DynamicResource Brush_PrimaryAccent}"
                                                                      Margin="12" Command="{Binding AddCollectionCommand}"
                                                                      ToolTip="{DynamicResource Language_Add_Collection}">
                                        <fwc:MaterialIcon Text="&#xE145;" FontSize="22"
                                                          Foreground="{DynamicResource Brush_FloatingActionButtonIcon}"/>
                                    </fwc:MaterialFloatingActionButton>
                                </StackPanel>
                            </Grid>
                        </fwc:PivotItem>
                        <!-- Menu -->
                        <fwc:PivotItem>
                            <DockPanel>
                                <StackPanel DockPanel.Dock="Bottom" Margin="0,18,0,0">
                                    <controls:SplitViewRadioButton x:Name="SettingsButton" Content="{DynamicResource Language_Settings}" GroupName="SplitViewButtonGroup" Icon="&#xE8B8;" Checked="SettingsButton_Checked"/>
                                    <controls:SplitViewRadioButton x:Name="InformationButton" Content="{DynamicResource Language_Information}" GroupName="SplitViewButtonGroup" Icon="&#xE88E;" Checked="InformationButton_Checked" />
                                </StackPanel>
                                <ScrollViewer VerticalScrollBarVisibility="Auto" PanningMode="Both" Margin="0,18,0,0">
                                    <StackPanel>
                                        <controls:SplitViewRadioButton x:Name="NotesButton" Content="{DynamicResource Language_Notes}" 
                                                                       GroupName="SplitViewButtonGroup" Icon="&#xE02F;" 
                                                                       Checked="NotesButton_Checked"/>
                                    </StackPanel>
                                </ScrollViewer>
                            </DockPanel>
                        </fwc:PivotItem>
                    </fwc:Pivot>
                </DockPanel>
                <Border Width="4" VerticalAlignment="Stretch" Background="{DynamicResource Brush_SplitViewShadow}"/>
            </StackPanel>
        </fwc:SplitView.Pane>
        <!-- SplitView Content -->
        <fwc:SplitView.Content>
            <Grid Background="#00000000">
                <Border x:Name="Overlay" Canvas.ZIndex="99" Background="{DynamicResource Brush_Overlay}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" BorderThickness="0" Visibility="Collapsed"/>
                <Grid Canvas.ZIndex="0">
                    <StackPanel VerticalAlignment="Top">
                        <Border Canvas.ZIndex="0" Height="48" Background="{DynamicResource Brush_ToolbarBackground}" HorizontalAlignment="Stretch">
                            <TextBlock x:Name="PageTitle" Margin="60,0,0,0" FontSize="{DynamicResource FontSizeLarge}"
                                           VerticalAlignment="Center" Foreground="{DynamicResource Brush_LightText}"/>
                        </Border>
                        <Border Height="4" HorizontalAlignment="Stretch" Background="{DynamicResource Brush_ToolbarShadow}"/>
                    </StackPanel>
                    <Frame x:Name="MainFrame" Canvas.ZIndex="1" NavigationUIVisibility="Hidden" Margin="0,48,0,0"/>
                </Grid>
            </Grid>
        </fwc:SplitView.Content>
    </fwc:SplitView>
</Page>
